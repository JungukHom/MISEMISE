<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56e3e4"
    tools:context="com.skykallove.misemise.Fragment.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contact_message"
            android:textColor="@color/main_text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/contact_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebe553"
            android:text="@string/contact_send" />


    </LinearLayout>

</FrameLayout>