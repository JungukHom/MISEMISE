<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.skykallove.misemise.Fragment.AddAlarmFragment">

    <TimePicker
        android:id="@+id/add_alarm_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner">

    </TimePicker>

    <EditText
        android:id="@+id/add_alarm_memo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left|top"
        android:hint="@string/write_memo"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <!-- 저장, 취소버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_alarm_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_alarm_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/save"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
