<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.skykallove.misemise.Fragment.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <!-- 전체 layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="50dp">

            <!-- 대문정보 layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서대문구 남가좌2동"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/main_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2018-05-21 09:20PM"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/face_01" />

                <TextView
                    android:id="@+id/main_air_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나쁨"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/main_air_quality_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공기가 탁하네요. 조심하세요~"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- 세부 정보 layout -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:scrollbars="none">

                <!-- 세부 정보 layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 미세먼지 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/face_01" />

                        <TextView
                            android:id="@+id/mise_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나쁨"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mise_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52ug/m^2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- 초미세먼지 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/test2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/face_01" />

                        <TextView
                            android:id="@+id/mise_quality2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나쁨"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mise_detail2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52ug/m^2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- 이산화질소 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/test3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/face_01" />

                        <TextView
                            android:id="@+id/mise_quality3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나쁨"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mise_detail3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52ug/m^2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- 오존 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/test4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/face_01" />

                        <TextView
                            android:id="@+id/mise_quality4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나쁨"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mise_detail4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52ug/m^2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- 일산화탄소-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/test5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/face_01" />

                        <TextView
                            android:id="@+id/mise_quality5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나쁨"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mise_detail5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52ug/m^2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- 아황산가스 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/test6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/face_01" />

                        <TextView
                            android:id="@+id/mise_quality6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나쁨"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mise_detail6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52ug/m^2"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>

            <!-- 광고 -->
            <LinearLayout
                android:background="#88008800"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="광고가 들어갈 자리입니다."
                    android:textAlignment="center" />

            </LinearLayout>

            <!-- 세부 사항 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#88880000"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="세부사항이 들어갈 자리입니다."
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="미세미세는 ~~~~~\n\n\n실제 수치와 다를 수 있습니다."
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
